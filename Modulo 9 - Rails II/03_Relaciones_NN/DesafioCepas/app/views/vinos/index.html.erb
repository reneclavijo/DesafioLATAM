<p id="notice"><%= notice %></p>

<h1>Vinos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vinos.each do |vino| %>
      <tr>
        <td><%= vino.nombre %></td>
        <td><%= link_to 'Show', vino %></td>
        <td><%= link_to 'Edit', edit_vino_path(vino) %></td>
        <td><%= link_to 'Destroy', vino, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vino', new_vino_path %>
