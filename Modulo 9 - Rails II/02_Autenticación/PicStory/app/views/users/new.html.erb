<div class="row justify-content-center">
    <div class="col-sm-10 col-lg-6">

        <h1>Reg√≠strate</h1>
        <h3> para comenzar a contar su historias </h3>

        <div class="banner-registro text-center">
            <%# render 'shared/carousel' %>
            <img src="https://media.giphy.com/media/lYjA4tfvCc8UAju1Op/giphy-downsized-large.gif">
        </div>


        <%= form_with(model: @user) do |f| %>
            <div class="mb-3">
                <%= f.label         :name, class: 'form-label' %>
                <%= f.text_field    :name, class: 'form-control' %>
                 <% if @user.errors[:name].any? %>
                    <span class="badge text-bg-danger p-2 mt-2">
                        <%= @user.errors[:name].first %>
                    </span>
                <% end %>
            </div>
            <div class="mb-3">
                <%= f.label         :email, class: 'form-label' %>
                <%= f.email_field   :email, class: 'form-control' %>
                <% if @user.errors[:email].any? %>
                    <span class="badge text-bg-danger p-2 mt-2">
                        <%= @user.errors[:email].first %>
                    </span>
                <% end %>
            </div>
            <div class="mb-3">
                <%= f.label             :password, class: 'form-label' %>
                <%= f.password_field    :password, class: 'form-control' %>
                <% if @user.errors[:password].any? %>
                    <span class="badge text-bg-danger p-2 mt-2">
                        <%= @user.errors[:password].first %>
                    </span>
                <% end %>
            </div>
            <div class="mb-3">
                <%= f.label             :password_confirmation, class: 'form-label' %>
                <%= f.password_field    :password_confirmation, class: 'form-control' %>
                <% if @user.errors[:password_confirmation].any? %>
                    <span class="badge text-bg-danger p-2 mt-2">
                        <%= @user.errors[:password_confirmation].first %>
                    </span>
                <% end %>
            </div>
            <%= f.submit "Registrarme", class: 'btn btn-primary' %>
        <% end %>

    </div>
</div>